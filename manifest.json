{
	"name": "Windows 98",
	"version": "0.1.3",
	"description": "Windows 98 retro remake",
	"icons": {
		"16": "images/icons/desktop-16x16.png",
		"32": "images/icons/desktop-32x32.png",
		"48": "images/icons/desktop-48x48.png"
	},
	"permissions": [
		"fullscreen",
		"clipboardRead",
		"clipboardWrite",
		{"fileSystem": ["write"]}
	],
	"optional_permissions": [
		"unlimited_storage"
	],
	"app": {
		"background": {
			"scripts": ["chrome-app.js"]
		}
	},
	"offline_enabled": true,
	"manifest_version": 2
}